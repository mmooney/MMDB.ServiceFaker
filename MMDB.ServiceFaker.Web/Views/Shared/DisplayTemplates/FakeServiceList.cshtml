@model IEnumerable<MMDB.ServiceFaker.Web.Dto.FakeService>

<h2>Fake Services</h2>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Service Name</th>
			<th>Real Endpoint</th>
			<th>Relative Fake Endpoint</th>
			<th>Response Type</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var service in Model)
		{
			<tr>
				<td>@Html.ActionLink(service.ServiceName, "Details", "FakeService", new {id=service.ID}, null)</td>
				<td>@service.RealEndpointRootUrl</td>
				<td>@service.RelativeFakeRootUrl</td>
				<th>@MMDB.Shared.EnumHelper.GetDisplayValue(service.EnumFakeServiceResponseTypeID)</th>
				<td>@Html.ActionLink("Edit", "Edit", "FakeService", new {id=service.ID}, new {@class="btn btn-primary"})</td>
				<td>@Html.ActionLink("Delete", "Delete", "FakeService", new {id=service.ID}, new {@class="btn btn-danger"})</td>
			</tr>
		}
	</tbody>
</table>
@if(Model.Count() == 0)
{
	<em>No Services Yet</em>
}
@Html.ActionLink("Create Fake Service", "Create", "FakeService")